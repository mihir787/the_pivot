<h1>Orders</h1>

<div class="user-orders-list">
<div class="center_div">
<table id="first_table">
    <tr>
      <th>Order</th>
      <th>Subtotal</th>
      <th>Placed</th>
      <th>Status</th>
    </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to "#{order.id}", user_order_path(order) %></td>
      <td><%= order.subtotal.to_f / 100.00 %></td>
      <td><%= order.date_of_order(order.created_at) %></td>
      <td><%= order.status %></td>
    </tr>
  <% end %>
</table>
<h2>Download Purchased Photos</h2>
<ul>
  <% @photos.each do |photo| %>
    <li><a href="<%= photo.image.url %>" download ><%= photo.title %></a></li>
  <% end %>
</ul>
</div>
</div>
</ul>
