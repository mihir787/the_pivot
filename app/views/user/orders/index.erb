<div class="container">
  <h1>Orders</h1>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <table class="table">
        <tr>
          <th>Order</th>
          <th>Subtotal</th>
          <th>Placed</th>
          <th>Status</th>
        </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to "#{order.id}", user_order_path(order) %></td>
          <td><%= order.subtotal.to_f / 100.00 %></td>
          <td><%= order.date_of_order(order.created_at) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>


