<div class="checkouts-page">
  <h2>Your Cart</h2>
  <table border = 2px >
    <tr>
      <td>Photo</td>
      <td>Store</td>
      <td>Price</td>
      <td>Remove</td>
    </tr>
    <tr>
  <% @photos.each do |photo| %>
      <td><%= photo.title %></td>
      <td><%= photo.store.name %></td>
      <td><%= number_to_currency(photo.price.to_f/100.00) %></td>
      <td><%= button_to "Remove", checkout_remove_path(photo_id: photo.id)%></td>
    </tr>
  <% end %>
    <tfoot>
      <tr>
        <td>Total</td>
        <td><%= number_to_currency(@cart.total.to_f/100.00) %></td>
      </tr>
    </tfoot>
  </table>

  <% if current_user %>
  <%= button_to "Checkout", checkout_confirmation_path, method: :get %>
  <% else %>
  <%= button_to "Checkout", new_user_path(origin: {destination: "checkout"}), method: :get %>
  <% end %>
</div>
